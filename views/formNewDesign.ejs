<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="stylesheets/common.css" />
    <link rel="stylesheet" href="/stylesheets/addDesign.css" />

 
    <link rel="stylesheet" href="/stylesheets/formNewDesign.css" />

    <title>profile</title>
    <%- include('modules/links.ejs') %>
  </head>
  <body>
    <%- include('modules/navbar.ejs') %>
    <main>
    
  
      <div>
       
      <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col d-flex justify-content-center">
                <div class="formulario">
                    <form action="/design/createDesign/<%= result.designer_id %>" method="post" enctype="multipart/form-data">
                        <h2 class="text-center mb-4">Add Design!</h2>
                        <div class="mb-3">
                            <label for="exampleInputTitle" class="form-label">Name</label>
                            <input type="text" class="form-control" id="exampleInputName" name="design_name" >
                        </div>
                        <div class="mb-3">
                            <label for="genre" class="form-label">Gender</label>
                            <select name="genre" id="genre" class="form-select">
                                <option value="" selected disabled>Select an option</option>
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="fabric" class="form-label">Fabric</label>
                            <select name="fabric" id="fabric" class="form-select">
                                <option value="" selected disabled>Select an option</option>
                                <option value="Cotton">Cotton</option>
                                <option value="Polyester">Polyester</option>
                                <option value="Viscose">Viscose</option>
                                <option value="Wool">Wool</option>
                                <option value="Linen">Linen</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label">Color</label>
                            <select name="color" id="color" class="form-select" >
                                <option value="" selected disabled>Select an option</option>
                                <option value="Red">Red</option>
                                <option value="Sky-blue">Sky blue</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Stone">Stone</option>
                                <option value="crudo">Raw</option>
                                <option value="Indigo">Indigo</option>
                                <option value="beige">Beige</option>



                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="prenda" class="form-label">Garment type</label>
                            <select name="prenda" id="prenda" class="form-select" >
                                <option value="" selected disabled>Select an option</option>
                                <option value="Camisa">Shirt</option>
                                <option value="Bermuda">Bermuda</option>
                                <option value="Dress">Dress</option>
                                <option value="Jacket">Jacket</option>
                                <option value="Trousers">Trousers</option>
                                <option value="T-shirt">T-shirt</option>

                            
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Description</label>
                            <textarea id="descripcion" name="descripcion" class="form-control" rows="4" placeholder="Write a description..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputImg" class="subir-img">Upload your image</label>
                            <input type="file" class="file-input-hidden" id="exampleInputImg" name="img">
                        </div>
                       <button>Submit</button>
                       <button type="button" onclick="window.location.href='/designer/profile/<%= result.designer_id %>'">cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </main>
    <%- include('modules/footer.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
