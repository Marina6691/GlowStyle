<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>profile</title>
    <link rel="stylesheet" href="stylesheets/common.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />

    <%- include('modules/links.ejs') %>
  </head>
  <body>
    <%- include('modules/navbar.ejs') %>
    <main>
      <section class="section1 mt-4">
        <div class="container">
          <div class="row">
            <div class="col img-designer">
              <img
                src="/images/designers/<%=result.designer_img?result.designer_img:'default.jpg'%>"
                alt="default_img"
              />
            </div>

            <div class="col mx-4 description">
              <div class="description">
                <h1>
                   <%= result.designer_name %> <%=
                  result.designer_lastname%>
                </h1>
                <h2>Email: <%= result.email %></h2>
                <h2>Phone number: <%= result.phone_number %></h2>
                <p class="p-texto"><%= result.designer_description %></p>
                <button
                  class="mt-3 btn-add"
                  onclick="window.location.href='/designer/formNewDesign/<%=result.designer_id%>'"
                >
                  ADD DESIGN
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="section2">
        <div class="container-xxl">
          <div class="row">
            <div class="col">
              <h2 class="text-center h2-color">DESIGN LIST</h2>
              <div>
                <div class="d-flex flex-wrap gap-5 justify-content-center p-4">
                  <% designs.forEach((elem)=>{ %>
                  <div class="card">
                    <a
                          href="/design/DesignProfile/<%= elem.design_id %>"
                          class=""
                          >
                          <img
                      src="/images/design/<%= elem.design_img?elem.design_img:'default-logo.webp' %>"
                      class="card-img-top"
                      alt="imagen_diseÃ±o"
                    />
                          </a
                        >
                    
                    <div class="card-body">
                      <h3 class="card-title"><%= elem.design_name %></h3>
                      

                    
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <%- include('modules/footer.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
